@page
@model LibraryManagementSystem.Pages.Books.EditModel

<div class="container mt-5">
    <!-- Başlık -->
    <h1 class="text-center text-primary mb-4" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: 600; font-size: 2.5rem;">Edit Book</h1>

    <form method="post">
        <input type="hidden" asp-for="Book.BookId" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

        <!-- Başlık Alanı -->
        <div class="form-group mb-4">
            <label asp-for="Book.Title" class="control-label" style="font-weight: 500; font-size: 1.1rem;">Book Title</label>
            <input asp-for="Book.Title" class="form-control" placeholder="Enter book title" />
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>

        <!-- Yazar Alanı -->
        <div class="form-group mb-4">
            <label asp-for="Book.Author" class="control-label" style="font-weight: 500; font-size: 1.1rem;">Author</label>
            <input asp-for="Book.Author" class="form-control" placeholder="Enter author name" />
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>

        <!-- Kategori Alanı -->
        <div class="form-group mb-4">
            <label asp-for="Book.CategoryId" class="control-label"></label>
            <select asp-for="Book.CategoryId" class="form-control" asp-items="Model.Categories">
                <option value="">-- Select a Category --</option>
            </select>
            <span asp-validation-for="Book.CategoryId" class="text-danger"></span>
        </div>

        <!-- Yayın Yılı Alanı -->
        <div class="form-group mb-4">
            <label asp-for="Book.PublicationYear" class="control-label" style="font-weight: 500; font-size: 1.1rem;">Publication Year</label>
            <input asp-for="Book.PublicationYear" class="form-control" type="number" placeholder="Enter publication year" />
            <span asp-validation-for="Book.PublicationYear" class="text-danger"></span>
        </div>

       

        <!-- Form Butonlar -->
        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-success btn-lg">Save</button>
            <a asp-page="./Index" class="btn btn-secondary btn-lg">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('form').addEventListener('submit', (e) => {
            console.log("Form submitted");
        });
    </script>
}
