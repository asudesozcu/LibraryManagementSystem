@page
@model LibraryManagementSystem.Pages.Books.DeleteModel

<div class="container mt-5">
    <!-- Başlık -->
    <h1 class="text-center text-danger mb-4" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: 600; font-size: 2.5rem;">Delete Book</h1>

    <!-- Silme Onayı -->
    <div class="alert alert-warning text-center mb-4" role="alert">
        <h4 class="alert-heading">Are you sure you want to delete this book?</h4>
        <p class="lead">This action is irreversible. Please confirm your decision.</p>
    </div>

    <!-- Kitap Bilgileri -->
    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <h4 class="card-title text-center text-primary mb-3">@Model.Book.Title</h4>
            <hr />
            <dl class="row">
                <!-- Yazar -->
                <dt class="col-sm-3" style="font-weight: 500; font-size: 1.1rem;">Author</dt>
                <dd class="col-sm-9">@Model.Book.Author</dd>

                <!-- Yayın Yılı -->
                <dt class="col-sm-3" style="font-weight: 500; font-size: 1.1rem;">Publication Year</dt>
                <dd class="col-sm-9">@Model.Book.PublicationYear</dd>
            </dl>
        </div>
    </div>

    <!-- Butonlar -->
    <div class="d-flex justify-content-center mt-4">
        <form method="post" class="mr-2">
            <input type="hidden" asp-for="Book.BookId" />
            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
        </form>
        <a asp-page="./Index" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
</div>
