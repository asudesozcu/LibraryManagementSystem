@page
@model LibraryManagementSystem.Pages.Books.DetailsModel

<div class="container mt-5">
    <!-- Başlık -->
    <h1 class="text-center text-primary mb-4" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: 600; font-size: 2.5rem;">Book Details</h1>

    <div class="card shadow-lg">
        <div class="card-body">
            <dl class="row">
                <!-- Başlık -->
                <dt class="col-sm-3" style="font-weight: 500; font-size: 1.1rem;">Title</dt>
                <dd class="col-sm-9">@Model.Book.Title</dd>

                <!-- Yazar -->
                <dt class="col-sm-3" style="font-weight: 500; font-size: 1.1rem;">Author</dt>
                <dd class="col-sm-9">@Model.Book.Author</dd>

                <!-- Yayın Yılı -->
                <dt class="col-sm-3" style="font-weight: 500; font-size: 1.1rem;">Publication Year</dt>
                <dd class="col-sm-9">@Model.Book.PublicationYear</dd>

               
            </dl>
        </div>
    </div>

    <!-- Geri Dön Butonu -->
    <div class="d-flex justify-content-center mt-4">
        <a asp-page="./Index" class="btn btn-secondary btn-lg">Back to List</a>
    </div>
</div>
