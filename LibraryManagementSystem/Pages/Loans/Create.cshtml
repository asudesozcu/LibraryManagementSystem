@page
@model LibraryManagementSystem.Pages.Loans.CreateModel
@{
    ViewData["Title"] = "Create Loan";
}

h1>Create a Loan</h1>

<div>
    <h4>User: @ViewData["UserName"]</h4>
</div>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Loan.BookId" class="control-label">Select Book</label>
        <select asp-for="Loan.BookId" class="form-control">
            @foreach (var book in Model.AvailableBooks)
            {
                <option value="@book.Value">
                    @book.Text
                </option>
            }
        </select>
        <span asp-validation-for="Loan.BookId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}