@page
@model LibraryManagementSystem.Pages.Loans.CreateModel

<h1>Ödünç Kitap Al</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Loan.BookId" class="control-label">Kitap Seç</label>
        <select asp-for="Loan.BookId" class="form-control" asp-items="@(new SelectList(Model.AvailableBooks, "BookId", "Title"))">
            <option value="">Kitap Seçin</option>
        </select>
        <span asp-validation-for="Loan.BookId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Loan.ReturnDate" class="control-label">İade Tarihi (Opsiyonel)</label>
        <input asp-for="Loan.ReturnDate" class="form-control" type="date" />
        <span asp-validation-for="Loan.ReturnDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kitabı Ödünç Al</button>
</form>
