@page "{id:int}"
@model LibraryManagementSystem.Pages.Loans.EditModel
@{
    ViewData["Title"] = "Return Loan";
}

<h1 class="text-primary">Return Loan</h1>

<div class="card shadow-sm p-3 mb-5 bg-white rounded">
    <div class="card-body">
        <h4 class="card-title text-secondary">Loan Details</h4>
        <div class="alert alert-info">
            <p><strong>Book:</strong> <span class="text-dark">@Model.Loan.book?.Title "</span></p>
            <p><strong>Borrower:</strong> <span class="text-dark">@Model.Loan.user?.FirstName @Model.Loan.user?.LastName "</span></p>
            <p><strong>Loan Date:</strong> <span class="text-dark">@Model.Loan.LoanDate.ToString("dd.MM.yyyy")</span></p>
        </div>
    </div>
</div>

<form method="post" class="mt-4">
    <input type="hidden" asp-for="Loan.LoanId" />

    <button type="submit" class="btn btn-success btn-lg">Confirm Return</button>
    <a asp-page="./Index" class="btn btn-secondary btn-lg ml-3">Cancel</a>
</form>
