@page
@model LibraryManagementSystem.Pages.Loans.EditModel


<h1>Return Loan</h1>

<form method="post">
    <div class="form-group">
        <label>Book Title:</label>
        <p>@Model.Loan.book.Title</p>
    </div>

    <div class="form-group">
        <label>Borrower:</label>
        <p>@Model.Loan.user.FirstName @Model.Loan.user.LastName</p>
    </div>

    <div class="form-group">
        <label>Loan Date:</label>
        <p>@Model.Loan.LoanDate.ToShortDateString()</p>
    </div>

    <div class="form-group">
        <label>Return Date:</label>
        <p>@Model.Loan.ReturnDate?.ToShortDateString() ?? "Not Returned"</p>
    </div>

    <button type="submit" class="btn btn-success">Mark as Returned</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
