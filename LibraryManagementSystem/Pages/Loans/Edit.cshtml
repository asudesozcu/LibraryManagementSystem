@page "{id:int}"
@model LibraryManagementSystem.Pages.Loans.EditModel
@{
    ViewData["Title"] = "Return Loan";
}

<div class="container mt-5">
    <!-- Başlık -->
    <h1 class="text-center text-primary mb-4">Return Loan</h1>

    <!-- Loan Details Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h4 class="mb-0 text-secondary">Loan Details</h4>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>Book:</strong> <span class="text-dark">@Model.Loan.book?.Title</span>
                </li>
                <li class="list-group-item">
                    <strong>Borrower:</strong> <span class="text-dark">@Model.Loan.user?.FirstName @Model.Loan.user?.LastName</span>
                </li>
                <li class="list-group-item">
                    <strong>Loan Date:</strong> <span class="text-dark">@Model.Loan.LoanDate.ToString("dd.MM.yyyy")</span>
                </li>
            </ul>
        </div>
    </div>

    <!-- Form Buttons -->
    <form method="post" class="d-flex justify-content-center mt-4">
        <input type="hidden" asp-for="Loan.LoanId" />

        <button type="submit" class="btn btn-success btn-lg me-3">
            <i class="bi bi-check-circle"></i> Confirm Return
        </button>
        <a asp-page="./Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>
</div>
