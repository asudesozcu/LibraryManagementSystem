@page
@model LibraryManagementSystem.Pages.Users.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <!-- Başlık -->
    <h1 class="text-center text-primary mb-4" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: 600; font-size: 2.5rem;">Register</h1>

    <!-- Kayıt Formu -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form method="post" class="bg-light p-4 rounded shadow-sm">
                <!-- Hata Mesajları -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- First Name -->
                <div class="form-group mb-3">
                    <label asp-for="Register.FirstName" class="form-label">First Name</label>
                    <input asp-for="Register.FirstName" class="form-control" />
                    <span asp-validation-for="Register.FirstName" class="text-danger"></span>
                </div>

                <!-- Last Name -->
                <div class="form-group mb-3">
                    <label asp-for="Register.LastName" class="form-label">Last Name</label>
                    <input asp-for="Register.LastName" class="form-control" />
                    <span asp-validation-for="Register.LastName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group mb-3">
                    <label asp-for="Register.Email" class="form-label">Email Address</label>
                    <input asp-for="Register.Email" class="form-control" />
                    <span asp-validation-for="Register.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-group mb-3">
                    <label asp-for="Register.Password" class="form-label">Password</label>
                    <input asp-for="Register.Password" type="password" class="form-control" />
                    <span asp-validation-for="Register.Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-group mb-4">
                    <label asp-for="Register.ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="Register.ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="Register.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Submit Butonu -->
                <button type="submit" class="btn btn-primary btn-lg w-100">Register</button>

                <!-- Login Bağlantısı -->
                <div class="text-center mt-3">
                    <a asp-page="/Users/Login" class="btn btn-link text-decoration-none">Already have an account? Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
