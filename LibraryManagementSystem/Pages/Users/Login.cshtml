@page
@model LibraryManagementSystem.Pages.Users.LoginModel

<div class="container mt-5">
    <!-- Başlık -->
    <h1 class="text-center text-primary mb-4" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: 600; font-size: 2.5rem;">Login</h1>

    <!-- Login Formu -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form method="post" class="bg-light p-4 rounded shadow-sm">
                <!-- Hata Mesajları -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Email Girişi -->
                <div class="form-group mb-3">
                    <label asp-for="Login.Email" class="form-label">Email Address</label>
                    <input asp-for="Login.Email" class="form-control" />
                    <span asp-validation-for="Login.Email" class="text-danger"></span>
                </div>

                <!-- Password Girişi -->
                <div class="form-group mb-3">
                    <label asp-for="Login.Password" class="form-label">Password</label>
                    <input asp-for="Login.Password" class="form-control" type="password" />
                    <span asp-validation-for="Login.Password" class="text-danger"></span>
                </div>

                <!-- Login Butonu -->
                <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>
            </form>
        </div>
    </div>

    <hr class="my-4">

    <!-- Bağlantılar (Kayıt ve Şifre Sıfırlama) -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4 text-center">
            <p>
                <a asp-page="/Users/Register" class="btn btn-link text-decoration-none">Create New Account</a>
            </p>
            <p>
                <a asp-page="/Users/ForgotPassword" class="btn btn-link text-decoration-none">Forgot Password?</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
