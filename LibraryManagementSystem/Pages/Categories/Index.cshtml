@page
@model LibraryManagementSystem.Pages.Categories.IndexModel



<h1>Categories</h1>


<a asp-page="./Create" class="btn btn-primary">Add New Category</a>
<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@category.CategoryId" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@category.CategoryId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
