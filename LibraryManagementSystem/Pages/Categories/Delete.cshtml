@page
@model LibraryManagementSystem.Pages.Categories.DeleteModel

<div class="container mt-5">
    <h1 class="text-center mb-4" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: 600; font-size: 2rem;">Delete Category</h1>

    <h3 class="text-center mb-4">Are you sure you want to delete this category?</h3>

    <!-- Category Delete Form -->
    <form method="post" class="text-center">
        <input type="hidden" asp-for="Category.CategoryId" />

        <!-- Delete and Cancel Buttons -->
        <div class="form-group">
            <button type="submit" class="btn btn-danger btn-lg mx-2">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary btn-lg mx-2">Cancel</a>
        </div>
    </form>
</div>
